<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    
    <Space
        android:layout_width="280dp"
        android:layout_height="20dp" />
    
    <LinearLayout
        android:id="@+id/layout_fifty"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/add_video96x96"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_equal_"

            />
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="  +50"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/im_coin_d2"
            />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:id="@+id/layout_half"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/adpage96x96"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_equal_"

            />
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="  +25"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Space
            android:layout_width="2dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:src="@drawable/im_coin_d2"
            />
    </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_ad_apply"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="OK"
            android:background="@drawable/ok_button_shape"
            />
    </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


    </LinearLayout>
    
</LinearLayout>